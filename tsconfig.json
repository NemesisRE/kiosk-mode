{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "target": "ES2015",
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "@types": ["types"],
      "@constants": ["constants"],
      "@utilities": ["utilities"],
      "@styles": ["styles"]   
    }
  },
  "include": ["src/**/*.ts", "package.json"],
  "exclude": ["node_modules"]
}